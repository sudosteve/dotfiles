# Keyboard mappings for sxhkd

# Basic binds
alt + Return
        $TERMINAL
alt + grave
        dmenuunicode
alt + d
        j4-dmenu-desktop
alt + b
        brave

# System stuff
# put power off, scr lock, etc.

# Screenshots
Print
        mkdir -p pix/maim && maim pix/maim/pic-full-$(date '+%Y-%m-%d--T%H-%M-%S').png
ctrl + Print
        mkdir -p pix/maim && maim -i $(xdotool getactivewindow) pix/maim/pic-window-$(date '+%Y-%m-%d--T%H-%M-%S').png
shift + Print
        maimpick

# Recording
# Letting gpu-screen-recorder-ui take care of this now
# alt + Print
#         save-replay
# alt + shift + Print
#         record-screen

# Volume
XF86AudioRaiseVolume
        wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%+ && pkill -RTMIN+10 i3blocks
XF86AudioLowerVolume
        wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%- && pkill -RTMIN+10 i3blocks
XF86AudioMute
        wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle && pkill -RTMIN+10 i3blocks

# Playback
XF86AudioPlay
        playerctl play-pause
XF86AudioStop
        playerctl stop
XF86AudioPrev
        playerctl previous
XF86AudioNext
        playerctl next

# Brightness
XF86MonBrightnessUp
        xbacklight -inc 12.5
XF86MonBrightnessDown
        xbacklight -dec 12.5

# Random stuff

# alt + t
#         python ~/dev/chatbot_workspace/script.py "$(xclip -o)" | xclip
